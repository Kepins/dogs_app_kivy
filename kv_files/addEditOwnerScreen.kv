#: import StatusLabel kv_py_files.shared_elements.statusLabel

<AddEditOwnerScreen>:
    name: "addEditOwnerScreen"
    DefaultLayout:
        TitleLabel:
            text: root.title_label_text
        GridLayout:
            cols: 2
            row_default_height: '40dp'
            row_force_default: True
            spacing: 0, '30dp'
            size_hint: 1, None
            height: self.minimum_height
            pos_hint: { "center_x": 0.5}
            LineLabel:
                text: 'numer tel: '
            LineTextInput:
                id: txt_input_phone_number
            LineLabel:
                text: 'nazwa w tel: '
            LineTextInput:
                id: txt_input_phone_name
            LineLabel:
                text: 'imiÄ™: '
            LineTextInput:
                id: txt_input_first_name
            LineLabel:
                text: 'nazwisko: '
            LineTextInput:
                id: txt_input_last_name
            LineLabel:
                text: 'notka: '
            LineTextInput:
                id: txt_input_note
        Button:
            size_hint: 1, None
            height: '40dp'
            disabled: root.edit_dogs_button_disabled
            text:
                'Edytuj psy'
            on_release:
                app.root.get_screen("editSelectDogScreen").owner_edited = root.owner_edited
                app.root.current = "editSelectDogScreen"
                root.manager.transition.direction = "left"
        BoxLayout:
            orientation: 'horizontal'
            padding: 0, '20dp', 0, 0
            spacing: '15dp'
            size_hint: 1, None
            height: '60dp'
            Button:
                text: root.accept_button_text
                on_release:
                    root.accept_button_click()
                disabled:
                    root.accept_button_disabled
            Button:
                text: 'Anuluj'
                on_release:
                    app.root.current = root.prev_screen
                    root.manager.transition.direction = "right"
        # this widget is used to align buttons to the top of the screen
        Widget:
    StatusLabel:
        id: status_label
        text: ''
        size_hint: 1, None
        height: '25dp'
        color: (1, 1, 1, 1)
        pos_hint: {"y": 0}
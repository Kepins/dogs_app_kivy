Screen:
    canvas.before:
        Color:
            rgba: (240/255, 240/255, 240/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp', '20dp', '20dp', '20dp'
        Label:
            text: 'Wystąpił błąd podczas łączenia z bazą danych'
            font_size: '30dp'
            color: (0, 0, 0, 1)
        Button:
            size_hint: (1, None)
            height: '60dp'
            text: 'Wyjdź'
            on_release:
                app.stop()
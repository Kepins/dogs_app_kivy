<WelcomeScreen>:
    name: "welcomeScreen"

    DefaultLayout:
        TitleLabel:
            text: 'Aplikacja'
        MyButton:
            text: 'Kalendarz'
            on_release:
                app.root.current = "calendarScreen"
                root.manager.transition.direction = "left"
        MyButton:
            text: 'Klienci'
            on_release:
                app.root.current = "clientsScreen"
                root.manager.transition.direction = "left"
        MyButton:
            text: 'Raport'
        MyButton:
            text: 'Wyjd≈∫'
            on_release:
                app.stop()
        # this widget is used to align buttons to the top of the screen
        Widget:
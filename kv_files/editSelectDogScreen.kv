#: import DogsDataTable kv_py_files.shared_elements.dogsDataTable

<EditSelectDogScreen>
    name: "editSelectDogScreen"
    DefaultLayout:
        TitleLabel:
            text: 'Edytowanie ps√≥w'
        DogsDataTable:
            id: dogsDataTable
        BoxLayout:
            orientation: 'horizontal'
            padding: 0, '20dp', 0, 0
            spacing: '15dp'
            size_hint: 1, None
            height: '60dp'
            Button:
                text: 'Dodaj'
                on_release:
                    app.root.get_screen("addEditDogScreen").adding = True
                    app.root.get_screen("addEditDogScreen").owner = root.owner_edited
                    app.root.get_screen("addEditDogScreen").prev_screen = app.root.current
                    app.root.current = "addEditDogScreen"
                    root.manager.transition.direction = "left"
            Button:
                id: button_edit
                text: 'Edytuj'
                disabled:
                    not root.is_row_selected
                on_release:
                    app.root.get_screen("addEditDogScreen").adding = False
                    app.root.get_screen("addEditDogScreen").dog_edited = root.dog_selected
                    app.root.get_screen("addEditDogScreen").prev_screen = app.root.current
                    app.root.current = "addEditDogScreen"
                    root.manager.transition.direction = "left"
            Button:
                text: 'Anuluj'
                on_release:
                    app.root.current = root.prev_screen
                    root.manager.transition.direction = "right"
#: import StatusLabel kv_py_files.shared_elements.statusLabel

<AddEditDogScreen>
    name: "addEditDogScreen"
    DefaultLayout:
        TitleLabel:
            text: root.title_label_text
        GridLayout:
            cols: 2
            row_default_height: '40dp'
            row_force_default: True
            spacing: 0, '30dp'
            size_hint: 1, None
            height: self.minimum_height
            pos_hint: { "center_x": 0.5}
            LineLabel:
                text: 'imię: '
            LineTextInput:
                id: txt_input_name
            LineLabel:
                text: 'rasa: '
            ButtonWithObject:
                id: button_breed_dropdown
                background_normal: ''
                background_color: (200/255, 200/255, 200/255, 1)
            LineLabel:
                text: 'wielkość: '
            ButtonWithObject:
                id: button_size_dropdown
                background_normal: ''
                background_color: (200/255, 200/255, 200/255, 1)
            LineLabel:
                text: 'notka: '
            LineTextInput:
                id: txt_input_note
        BoxLayout:
            orientation: 'horizontal'
            padding: 0, '20dp', 0, 0
            spacing: '15dp'
            size_hint: 1, None
            height: '60dp'
            Button:
                text: root.accept_button_text
                on_release:
                    root.accept_button_click()
                disabled:
                    root.accept_button_disabled
            Button:
                text: 'Anuluj'
                on_release:
                    app.root.current = root.prev_screen
                    root.manager.transition.direction = "right"
        # this widget is used to align buttons to the top of the screen
        Widget:
    StatusLabel:
        id: status_label
        text: ''
        size_hint: 1, None
        height: '25dp'
        color: (1, 1, 1, 1)
        pos_hint: {"y": 0}
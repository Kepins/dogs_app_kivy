<CalendarScreen>:
    name: 'calendarScreen'

    DefaultLayout:
        padding: '20dp', '20dp', '20dp', '10dp'
        spacing: '5dp'
        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, None)
            height: "25dp"
            Button:
                size_hint: (None, 1)
                width: '75dp'
                text: 'Poprzedni'
                on_release:
                    root.on_prev_week()
            TitleLabel:
                size_hint: (1, 1)
                font_size: '20dp'
                text: root.title_text
            Button:
                size_hint: (None, 1)
                width: '75dp'
                text: 'Następny'
                on_release:
                    root.on_next_week()
        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, None)
            height: "25dp"
        GridLayout:
            id: calendarGrid
            cols: 7
        Button:
            size_hint: (1, None)
            height: '30dp'
            text: 'Wróć'
            on_release:
                app.root.current = "welcomeScreen"
                root.manager.transition.direction = "right"
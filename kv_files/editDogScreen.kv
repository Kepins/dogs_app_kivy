<EditDogScreen>
    name: "editDogScreen"
    DefaultLayout:
        TitleLabel:
            text: 'Edytowanie psa'
        GridLayout:
            cols: 2
            row_default_height: '40dp'
            row_force_default: True
            spacing: 0, '30dp'
            size_hint: 1, None
            height: self.minimum_height
            pos_hint: { "center_x": 0.5}
            Label:
                text: 'imię: '
                size_hint: None, 1
                width: '80dp'
                color: (0,0,0,1)
            LineTextInput:
                id: txt_input_name
            Label:
                text: 'rasa: '
                size_hint: None, 1
                width: '80dp'
                color: (0,0,0,1)
            ButtonWithBreed:
                id: button_breed_dropdown
                background_normal: ''
                background_color: (200/255, 200/255, 200/255, 1)
            Label:
                text: 'wielkość: '
                size_hint: None, 1
                width: '80dp'
                color: (0,0,0,1)
            Button:
                id: button_size_dropdown
                background_normal: ''
                background_color: (200/255, 200/255, 200/255, 1)
            Label:
                text: 'notka: '
                size_hint: None, 1
                width: '80dp'
                color: (0,0,0,1)
            LineTextInput:
                id: txt_input_note
        BoxLayout:
            orientation: 'horizontal'
            padding: 0, '20dp', 0, 0
            spacing: '15dp'
            size_hint: 1, None
            height: '60dp'
            Button:
                text: 'Zapisz'
                on_release:
                    root.on_save_button_click()
            Button:
                text: 'Anuluj'
                on_release:
                    app.root.current = "editSelectDogScreen"
                    root.manager.transition.direction = "right"
        # this widget is used to align buttons to the top of the screen
        Widget: